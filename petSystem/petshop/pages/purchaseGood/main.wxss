/* pages/purchaseGood/main.wxss */
.pageBody {
  padding: 10px;
}

.goodsDetails {
  background-color: white;
  margin: 15px 0;
  padding-bottom: 10px;
}

.addressStyle {
  display: flex;
  align-items: center;
  padding: 15px 10px;
  background-color: white;
}

.addressStyle>view:nth-child(1) {
  width: 40px;
  height: 40px;
}

.addressStyle image {
  width: 100%;
  height: 100%;
}

.addressStyle>view:nth-child(2) {
  margin-left: 15px;
  flex-grow: 2;
}

.addressStyle>view:nth-child(2)>view:nth-child(2) {
  font-size: 14px;
  margin-top: 5px;
}

.addressStyle>view:nth-child(2)>view:nth-child(3) {
  font-size: 12px;
  color: red;
}

.addressStyle>view:nth-child(3) {
  margin-left: 15px;
}

.addressStyle text {
  color: grey;
  font-size: 14px;
  margin-left: 5px;
}

.addressStyle>view>view:last-child {
  margin-top: 5px;
}

.cardBody{
  background-color: white !important;
}

.titleStyle {
  display: flex;
  font-size: 14px;
  justify-content: space-between;
  margin-top: 10px;
}

.titleStyle>view>view {
  color: grey;
  font-size: 12px;
}

.priceTop {
  font-size: 12px;
  color: #fe9100;
  margin-top: 20px;
}

.additional {
  display: flex;
  padding-left: 15%;
  align-items: center;
  margin-top: 10px;
}

.additional>view:nth-child(1) {
  font-size: 12px;
  font-weight: bold;
  width: 60px;
}

.additional>view:nth-child(2) {
  font-size: 12px;
  color: grey;
  margin-left: 10px;
  margin-right: 10px;
  flex-grow: 2;
}

.additional>view:nth-child(3) {
  font-size: 12px;
}

.subtotal {
  text-align: right;
  font-size: 13px;
}

.subtotal>text:nth-child(1) {
  font-size: 12px;
  color: grey;
  margin-right: 5px;
}

.subtotal>text:nth-child(3) {
  color: red;
  margin-right: 5px;
}

.buttonSty {
  margin-bottom: 100px;
  margin-top: 5px;
}